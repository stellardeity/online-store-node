    <h1>Корзина</h1>

    <div id="card">
        {{#if product.length}}
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Действие</th>
                </tr>
            </thead>

            <tbody>
                {{#each product}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>

        <p><strong>Цена: </strong> <span class="price"> {{price}}</span></p>

        <form action="/orders" method="POST">
        <button type="submit" class="btn">Make an Order</button></form>
        {{else}}
        <p>Корзина пуста</p>
        {{/if}}

    </div>