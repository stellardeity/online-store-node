<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Log In</a></li>
                <li class="tab col s6"><a href="#register">Registration</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h1>Log In</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <button class="btn btn-primary indigo darken-4" type="submit">Log In</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h1>Create an account</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Enter name"></span>
                </div>

                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Repeat your password</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <button class="btn btn-primary indigo darken-4" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>